<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yutaro0224.petyakutyatimer.MainActivity"
    android:background="#1dc9cf">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PechaKucha 20x20 Timer"
        android:textStyle="bold"
        android:textSize="25dp"
        android:background="@color/textBackColor"
        android:textColor="@color/topTextColor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/textView"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/timer"
        android:text="ここに表示されるよ"
        android:textSize="70dp"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/start_Button"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/start_Button"
        android:text="Start"
        android:textColor="#FFFFFF"
        android:background="#323232"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="10dp"
        app:layout_constraintVertical_bias="0.766"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/stop_Button"
        android:text="Stop"
        android:layout_margin="100dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/start_Button"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageButton
        android:id="@+id/help_button"
        android:src="@drawable/help_button"
        android:scaleType="centerInside"
        android:background="@drawable/image_button_bg"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteY="467dp" />
</android.support.constraint.ConstraintLayout>
